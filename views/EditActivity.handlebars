<script>
  window.onload = function(){
    document.getElementById("name").innerText = getUrlParam('n');
    document.getElementById('worklength').innerText = getUrlParam('workLength')+":00";
    document.getElementById('breaklength').innerText = getUrlParam('breakLength')+":00";
}

function getUrlParam(name) {
    var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
    var r = window.location.search.substr(1).match(reg); 
    if (r != null) {
        return unescape(r[2]);
    } else {
        return null; 
    }
}
</script>
